<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.canyinghao.canrefreshdemo" >

    <application
        android:allowBackup="true"
        android:name=".App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.RvActivity"/>
        <activity android:name=".ui.ViewActivity"/>
        <activity android:name=".ui.ScrollActivity"/>
        <activity android:name=".ui.CustomActivity"/>
        <activity android:name=".ui.CooActivity"/>
        <activity android:name=".ui.CooActivity2"/>
    </application>

</manifest>
